
<%= form_with model: @post do |form| %>
  <p>
    <%= form.label "title" %>
    <%= form.text_field "title" %>
  </p>

  <p>
    <%= form.label "description" %>
    <%= form.text_field "description" %>
  </p>

  <p>
    <%= form.hidden_field "posted_on" %>
  </p>


   <p>
    <%= form.hidden_field "place_id" %>
  </p>

  <%= form.submit %>

<p><a href="/places">Back to Places</a></p>
<% end %>